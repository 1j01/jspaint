{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "node", // Fixes error TS2792: Cannot find module 'electron'. https://stackoverflow.com/a/46562884/2624876
		"checkJs": true,
		"types": [
			"jquery",
			"node",
			"youtube",
			"dom-speech-recognition",
			"wicg-file-system-access",
		],
		"skipLibCheck": true,
	},
	"include": [
		"src/**/*",
		"localization/*.js",
		"lib/os-gui/os-gui.d.ts"
	],
	"exclude": [
		"node_modules/",
		".git/",
		"dist/",
		"build/",
		"out/",
	]
}