{
	"version": "0.2.0",
	"compounds": [
		{
			"name": "Main + renderer",
			"configurations": [
				"Main",
				"Renderer"
			],
			"stopAll": true
		}
	],
	"configurations": [
		{
			"name": "Renderer",
			"port": 9222,
			"request": "attach",
			"type": "pwa-chrome",
			"webRoot": "${workspaceFolder}"
		},
		{
			"name": "Main",
			"type": "pwa-node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
			"windows": {
				"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
			},
			"args": [
				".",
				"--remote-debugging-port=9222"
			],
			"outputCapture": "std",
			"console": "integratedTerminal"
		}
	]
}