	"version": "0.2.0",
	"configurations": [
		{
			"type": "pwa-chrome",
			"request": "attach",
			"name": "Attach to Chrome",
			"port": 9222, // must run Chrome with a flag: google-chrome --remote-debugging-port=9222
			"urlFilter": "http://127.0.0.1:1999/*",
			"webRoot": "${workspaceFolder}"
		}
	]
}